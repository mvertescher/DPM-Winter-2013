import lejos.nxt.Button;
import robot.Robot;


public class Calibration {
	
	public static void main(String[] args) {

		// Create our robot
		Robot bot = new Robot();

		// Start the odometer and display
		bot.startOdometer();
		bot.startDisplay();

		// Wait for start
		Button.waitForAnyPress();

		bot.startLightTimers();
		bot.startGridCorrection();

		bot.moveImmediatelyBy(60);
		snooze(1000);
		bot.moveImmediatelyBy(90);

		// Wait for exit
		Button.waitForAnyPress();

	}

	/**
	 * Sleep the thread for some milliseconds
	 * 
	 * @param milliseconds
	 */
	private static void snooze(int milliseconds) {
		try {
			Thread.sleep(milliseconds);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
	
	
}
