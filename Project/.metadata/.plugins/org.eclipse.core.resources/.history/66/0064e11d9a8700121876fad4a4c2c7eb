package subsumption;

import subsumption.CricketBot;
import lejos.geom.Point;
import lejos.nxt.Sound;
import lejos.robotics.subsumption.Behavior;

public class Move implements Behavior {

	private CricketBot bot;
	private Point goal;
	boolean lock = false; // Ensures that stopMoving is not continuously called
	
	public Move(CricketBot b, Point p) {
		this.bot = b;
		this.goal = p;
	}
	
	@Override
	public boolean takeControl() {
		return (!this.bot.atDestination(goal) && !this.bot.obstacleDetected());
	}

	@Override
	public void action() {
		this.lock = false;
		this.bot.moveToPoint(goal);
		
	}

	@Override
	public void suppress() {
		if (!lock) { 
			this.bot.stopMoving();
			this.lock = true;
			Sound.twoBeeps();
		}	
	
	}
	
	
	
}
