package experimental;

import lejos.robotics.subsumption.Behavior;

public class Turn implements Behavior {

	private CricketBot bot;
	
	public Turn(CricketBot b) {
		this.bot = b;
	}
	
	
	@Override
	public boolean takeControl() {
		return bot.obstacleDetected();
	}

	@Override
	public void action() {
		bot.turnToPoint(0,0);
	}

	@Override
	public void suppress() {
		bot.stopMoving();
	}

}
