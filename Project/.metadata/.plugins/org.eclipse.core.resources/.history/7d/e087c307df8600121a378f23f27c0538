package sensors;

import lejos.nxt.SensorPort;

/**
 * SensorController.java
 * 
 * Wrapper class to organize sensors
 * 
 * @author Matthew Vertescher
 */
public class SensorController {

	private UltrasonicTimer frontUST;
	private LightSensorTimer leftLST, rightLST;
	
	/**
	 * Constructor 
	 */
	public SensorController() {
		
		frontUST = new UltrasonicTimer(SensorPort.S1);
		leftLST = new LightSensorTimer(SensorID.LEFT_LIGHT,SensorPort.S2,-7,11);
		rightLST = new LightSensorTimer(SensorID.RIGHT_LIGHT,SensorPort.S2,7,11);
	}
	
	/**
	 * Start a sensor based upon its ID
	 * @param sid
	 */ 
	public void startSensor(SensorID sid) {
		switch(sid) {
			case FRONT_ULTRASONIC:
				frontUST.startTimer();
				break;
			case LEFT_LIGHT:
				leftLST.startTimer();
				break;
			case RIGHT_LIGHT:
				rightLST.startTimer();
				break; 
		}
	}
	
	
	
	public void startFrontUltrasonicTimer() {
		frontUST.startTimer();
	}
	
	public void stopFrontUltrasonicTimer() {
		frontUST.stopTimer();
	}
	
	public int getFrontUltrasonicTimerDistance() {
		return frontUST.getDistance();
	}
	
	
	
}
